#! /usr/bin/env nix-shell
#!   nix-shell -i bash
#!   nix-shell --attr derivations.attrFourShells
#!   nix-shell --keep BURP
#!   nix-shell --pure
#!   nix-shell ../build/bin/pkgs.nix
#  shellcheck shell=bash

source "${srcBuildCtxSh}"

function main {
  export PYTHONPATH="${srcServer}:${PYTHONPATH}"

      utils_four_shells_ensure_configuration \
  &&  utils_configure_proxy "${BURP:-}" \
  &&  uvicorn \
        --host '0.0.0.0' \
        --interface 'asgi3' \
        --loop 'uvloop' \
        --port '8400' \
        'four_shells.asgi:APP'
}

main "${@}"
